<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="content">
  <%= comment.content %>
   <% if current_user == comment.user %>
      <li class="dropdown edit">
        <a href="#" class="dropdown-toggle edit-comment" data-toggle="dropdown">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Edit...", edit_comment_path(comment) %></li>
          <li><%= link_to "Delete...", comment, method: :delete, data: { confirm: "You sure"} %></li>
        </ul>
      </li>
    <%end%>
      </span>
  <span class="timestamp">Posted 
    <% unless comment.time_edit.nil?%>
      <%= time_ago_in_words(comment.time_edit) %> ago. Edited 
    <%else%>
      <%= time_ago_in_words(comment.created_at) %>
    <%end%>
    in <%= comment.created_at.strftime("%b %d, %Y") %> by
    <span class="user"><%= link_to comment.user.name, comment.user %></span>
    </span>
</li>

