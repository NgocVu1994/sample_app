<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="content">
    <% if current_user == micropost.user %>
      <li class="dropdown edit">
        <a href="#" class="dropdown-toggle edit-micropost" data-toggle="dropdown">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Edit...", edit_micropost_path(micropost) %></li>
          <li><%= link_to "Delete...", micropost, method: :delete, data: { confirm: "You sure"} %></li>
        </ul>
      </li>
    <%end%>
    <h4>
    <%= link_to micropost.title , micropost%>
    </h4>
    <%= micropost.content %>
    </span>
  <span class="timestamp">
    Posted
   <% unless micropost.time_edit.nil?%>
      <%= time_ago_in_words(micropost.time_edit) %> ago. Edited 
    <%else%>
      <%= time_ago_in_words(micropost.created_at) %>
    <%end%>
    in <%= micropost.created_at.strftime("%b %d, %Y") %>
    by  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    </span>
</li>





